{# define some cards as dummy content for homepage grid #}
{% set homepage_grid_content %}
  {% for card in grid_cards %}
    {% include '@components/cards/card.twig' with {
      'title': card.title,
      'url': card.url,
      'media': card.media,
      'date': card.date,
      'tags': card.tags,
      'read_more': card.read_more,
      'content': card.content
    } %}
  {% endfor %}
{% endset %}

{# Homepage #}
{% embed '@layouts/page/page.twig' %}
  {% block header %}
    {% include '@layouts/header/header.twig' with {
      'constrain': 'l-constrain'
    } %}
  {% endblock %}

  {% block main %}
    {% include '@layouts/region/region.twig' with {
      'constrain': 'l-constrain',
      'region_name': 'highlighted',
      'content': 'Highlighted Content'
    } %}
    {% include '@layouts/breadcrumb/breadcrumb.twig' with {
      'constrain': 'l-constrain',
    } %}
    {% include '@templates/homepage.twig' with {
      'homepage_constrain': homepage_constrain,
      'homepage_hero_image': hero_image,
      'homepage_hero_title': hero_title,
      'homepage_hero_summary': hero_summary,
      'homepage_hero_button_text': hero_button_text,
      'homepage_hero_button_url': hero_button_url,
      'homepage_grid_title': homepage_grid_title,
      'homepage_grid_content': homepage_grid_content
    } %}
  {% endblock %}

  {% block footer %}
    {% include '@layouts/footer/footer.twig' with {
      'constrain': 'l-constrain'
    } %}
  {% endblock %}
{% endembed %}
