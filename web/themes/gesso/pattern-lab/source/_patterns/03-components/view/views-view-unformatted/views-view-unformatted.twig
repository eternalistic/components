{% set additional_row_attributes = {
  "class": ["view__row"],
} %}

{% if title %}
  <{{ heading ?: 'h3' }}>{{ title|raw }}</{{ heading ?: 'h3' }}>
{% endif %}

{% for row in rows %}
  {% if wrapper %}
    <{{ element ?: 'div' }} {{ add_attributes(additional_row_attributes) }}>
      {{ row.content|raw }}
    </{{ element ?: 'div' }}>
  {% else %}
    {{ row.content|raw }}
  {% endif %}
{% endfor %}
